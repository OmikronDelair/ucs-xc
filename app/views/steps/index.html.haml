%header{ style: "padding: 22px 0; background-image: url('..#{image_path('headers/' << @headers.sample)}');" }
  .row
    .large-12.columns
      %h1 Steps
      %h4 Explore our stepcharts library
%section{ style: 'margin-top: 44px' }
  .row
    .large-8.columns
      - steps.each do |step|
        = link_to step.song.title, step_path(step.id)
        = link_to 'UCS File', step_download_path(step.id), target: '_blank'
        = link_to 'Edit', edit_step_path(step.id)
        = link_to 'Destroy', step_path(step.id), method: :delete
    %br
    %hr
    =link_to "New stepchart", new_step_path
